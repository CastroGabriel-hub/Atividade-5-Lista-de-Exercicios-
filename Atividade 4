programa {
	funcao inicio() {
		
	    real A = 0.0, B = 0.0, C = 0.0
	    
	    //Quando for informar as medidas digite apenas o número desejado//
	    
	    escreva("Informe a medida do primeiro lado do triângulo: ")
	    leia(A)
	    
	    escreva("O segundo lado: ")
	    leia(B)
	    
	    escreva("O terceiro lado: ")
	    leia(C)
	    
	    se(A == B e B == C){
	        escreva("\nSeu triângulo é Equilátero.\n")
	    }
	    senao{ 
	    
	        se(A == B ou A == C ou B == C){
	            escreva("\nSeu triângulo é Isóceles.\n")
	        }
	        senao{
	            escreva("\nSeu triângulo é Escaleno.\n")
	        }
	    }
	    
	}
}
