programa {
	funcao inicio() {
		
		caracter letra
		
		//Insira apenas digitos minúsculos//
		escreva("Digite uma letra à vontade: ")
		leia(letra)
		
		se(letra == 'a' ou letra == 'e' ou letra == 'i' ou letra == 'o' ou letra == 'u'){
		    escreva("A letra digitada é vogal!")
		}
		senao{
		    escreva("A letra digitada é consoante!")
		}
		
	}
}
